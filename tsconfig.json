{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"],
      "types": ["src/types.d"]
    }
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts",
    "index.ts",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
